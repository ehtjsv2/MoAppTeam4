<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.LoginActivity5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/Text_search"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginStart="60dp"
            android:hint="추천에서 제외할 음식을 검색하세요."/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginStart="60dp"
            android:background="@drawable/ligth_gary_rectangle_radius"
            android:id="@+id/Search_recycler"
            android:layout_width="300dp"
            android:layout_height="102dp"
            android:divider="#999999"
            android:dividerHeight="1dp"></androidx.recyclerview.widget.RecyclerView>


        <TextView
            android:id="@+id/Eat_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="60dp"
            android:textColor="@color/main5"
            android:fontFamily="@font/bmjua"
            android:text="제외 음식" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/Eat_recycler"
            android:background="@drawable/ligth_gary_rectangle_radius"
            android:layout_marginStart="40dp"
            android:layout_width="350dp"
            android:layout_height="102dp"
            android:divider="#999999"
            android:dividerHeight="1dp"></androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="60dp"
            >
            <Button
                android:id="@+id/before_button"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginStart="200dp"
                android:text="이전"
                android:fontFamily="@font/bmjua"
                />

            <Button
                android:id="@+id/commit_button"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:text="제출"
                android:fontFamily="@font/bmjua"
                />
        </LinearLayout>

    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>